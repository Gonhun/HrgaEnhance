<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="pragma" content="no-cache" />
    <title>@ViewBag.Title - Hrga</title>
    @{
        ViewBag.pathParent = Url.Content("~").Substring(0, Url.Content("~").Length - 1);
    }

    <link href="@ViewBag.pathParent/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="@ViewBag.pathParent/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="@ViewBag.pathParent/Content/Kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="@ViewBag.pathParent/Content/Kendo/kendo.default.min.css" rel="stylesheet" />

    <link href="@ViewBag.pathParent/Content/node-waves/waves.css" rel="stylesheet" />
    <link href="@ViewBag.pathParent/Content/animate-css/animate.min.css" rel="stylesheet" />

    <link href="@ViewBag.pathParent/Content/AdminBSB/materialize.css" rel="stylesheet" />
    <link href="@ViewBag.pathParent/Content/AdminBSB/style.css" rel="stylesheet" />
    <link href="@ViewBag.pathParent/Content/AdminBSB/Color/theme-light-blue.min.css" rel="stylesheet" />

    <script src="@ViewBag.pathParent/Scripts/jquery-1.12.4.min.js"></script>
    <script src="@ViewBag.pathParent/Scripts/jquery-3.4.1.min.js"></script>

    <script src="@ViewBag.pathParent/Scripts/Kendo/kendo.all.min.js"></script>

    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
</head>

<body class="theme-light-blue">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand" href="#">HRGA</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="pull-right"><a href="@ViewBag.pathParent/Login/Logout" class="js-right-sidebar" data-close="true"><i class="glyphicon glyphicon-log-out"></i> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="~/images/user.png" width="48" height="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Session["NRP"]</div>
                    <div class="email">@Session["Nama"]</div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">MAIN NAVIGATION</li>
                    <li>
                        <a href="/Home/Index">
                            <i class="glyphicon glyphicon-home"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="glyphicon glyphicon-list-alt"></i>
                            <span>Absen</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="/UploadAbsen">Upload Inject Absen</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="glyphicon glyphicon-pawn"></i>
                            <span>Karyawan</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="/MasterKaryawan">Data Karyawan</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            <i class="glyphicon glyphicon-file"></i>
                            <span>Report</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2020 - 2021 <a href="javascript:void(0);">IT-HCGS</a>
                </div>
                <div class="version">
                    <b>Version: </b> 2.0.0
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row clearfix">
                @RenderBody()

                <div class="body-content">
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </footer>
                </div>
            </div>
        </div>
    </section>

    <script src="@ViewBag.pathParent/Scripts/Kendo/kendo.aspnetmvc.min.js"></script>
    <script src="@ViewBag.pathParent/Scripts/Kendo/jszip.min.js"></script>
    <script src="@ViewBag.pathParent/Scripts/bootstrap.js"></script>
    <script src="@ViewBag.pathParent/Scripts/bootstrap.min.js"></script>

    <script src="@ViewBag.pathParent/Scripts/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="@ViewBag.pathParent/Scripts/jquery-countto/jquery.countTo.js"></script>
    <script src="@ViewBag.pathParent/Scripts/modernizr-2.8.3.js"></script>
    <script src="@ViewBag.pathParent/Content/node-waves/waves.js"></script>
    <script src="@ViewBag.pathParent/Scripts/jquery-inputmask/jquery.inputmask.bundle.js"></script>

    <script src="@ViewBag.pathParent/Scripts/admin.js"></script>

    <script src="@ViewBag.pathParent/Scripts/demo.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
